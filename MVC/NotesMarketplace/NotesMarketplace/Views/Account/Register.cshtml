@model NotesMarketplace.Models.UserRegistration
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <!-- important meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0 ,user-scalable=no">

    <!-- title -->
    <title>Notes Marketplace</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/Front/images/homepage/favicon.ico">

    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Font awesome -->
    <link rel="stylesheet" href="~/Content/Front/css/font-awesome/font-awesome.min.css">
    <!-- Bootstrap Css    -->
    <link rel="stylesheet" href="~/Content/Front/css/bootstrap/bootstrap.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/Front/css/style.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/Front/css/responsive.css">

</head>
<body>
    <div class="limiter">
        <div class="container-box">
            <div class="form-warp">
                <div id="site-logo" class="text-center">
                    <img src="~/Content/Front/images/login/top-logo.png" class="img-responsive" alt="top-logo">
                </div>
                <div id="form-wrapper" class="form-general">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { }))
                    {
                        <h3 class="text-center">Create an Account</h3>
                        <p class="text-center">Enter your details to signup</p>
                        if (TempData["Success"] != null)
                        {
                            <p id="user-message" class="text-center"><i class="fa fa-check-circle mr-2"></i>Your account has been successfully created. </p>
                        }
                        <div class="form-group">
                            <label for="exampleInputEmail1">First Name</label>
                            @Html.TextBoxFor(x=>x.FirstName, new { @class = "form-control", @placeholder = "Enter Your FirstName" })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger erroemessage" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Last Name</label>
                            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @placeholder = "Enter Your LastName" })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger erroemessage" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email</label>
                            @Html.TextBoxFor(x => x.EmailID, new { @class = "form-control", @placeholder = "Enter Your Email" })
                            @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger erroemessage" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            @Html.PasswordFor(x => x.Password, new { id = "exampleInputPassword1", @class = "form-control", @placeholder = "Enter Your Password" })
                            <span toggle="#password-field" id="toggle-password" class="toggle-password"><img src="~/Content/Front/images/login/eye.png" alt="toggle-password"></span>
                            <small id="passwordHelp" class="form-text text-muted">
                                password must be 6 to 24 characters long and must contain <br>1 Uppercase, 1 lowercase, 1 special character, 1-digit character
                            </small>
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger erroemessage" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Confirm Password</label>
                            @Html.PasswordFor(x => x.ConfirmPassword, new { id = "exampleInputPassword2", @class = "form-control", @placeholder = "Enter Your Confirm Password" })
                            <span toggle="#password-field" id="toggle-password2" class="toggle-password"><img src="~/Content/Front/images/login/eye.png" alt="toggle-password"></span>
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger erroemessage" })
                        </div>
                        <button type="submit" class="btn-general">sign up</button>
                    }
                    <p class="text-center">Already have an account? <a href="/account/login">Login</a></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery   -->
    <script src="~/Scripts/js/jquery.min.js"></script>

    <!-- Bootstrap Js -->
    <script src="~/Scripts/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom Js -->
    <script src="~/Scripts/js/script.js"></script>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
