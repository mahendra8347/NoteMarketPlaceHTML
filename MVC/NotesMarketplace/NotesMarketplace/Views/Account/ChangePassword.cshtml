@model NotesMarketplace.Models.ChangePassword
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <!-- important meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0 ,user-scalable=no">

    <!-- title -->
    <title>Notes Marketplace</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/Front/images/homepage/favicon.ico">

    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Font awesome -->
    <link rel="stylesheet" href="~/Content/Front/css/font-awesome/font-awesome.min.css">
    <!-- Bootstrap Css    -->
    <link rel="stylesheet" href="~/Content/Front/css/bootstrap/bootstrap.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/Front/css/style.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/Front/css/responsive.css">

</head>
<body>
    <div class="limiter">
        <div class="container-box">
            <div class="form-warp">
                <div id="site-logo" class="text-center">
                    <img src="/Content/Front/images/login/top-logo.png" class="img-responsive" alt="top-logo">
                </div>
                <div id="form-wrapper" class="form-general">
                    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { }))
                    {
                        <h3 class="text-center">Change Password</h3>
                        <p class="text-center">Enter your new password to change your password</p>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Old Password</label>
                            @Html.PasswordFor(x => x.OldPassword, new { id = "exampleInputPassword1", @class = "form-control", @placeholder = "Enter Your Old Password" })
                            @*<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Enter Your Old Password">*@
                            <span toggle="#password-field" id="toggle-password" class="toggle-password"><img src="/Content/Front/images/login/eye.png" alt="toggle-password"></span>
                            @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger errormessage" })
                            @if (@TempData["IncorrectPwd"] != null)
                            {
                                <h6 class="text-danger">@TempData["IncorrectPwd"]</h6>
                            }
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">New Password</label>
                            @Html.PasswordFor(x => x.NewPassword, new { id = "exampleInputPassword2", @class = "form-control", @placeholder = "Enter Your New Password" })
                            @*<input type="password" class="form-control" id="exampleInputPassword2" placeholder="Enter Your New Password">*@
                            <span toggle="#password-field" id="toggle-password2" class="toggle-password"><img src="/Content/Front/images/login/eye.png" alt="toggle-password"></span>
                            <small id="passwordHelp" class="form-text text-muted">
                                password must be 6 to 24 characters long and must contain <br>1 Uppercase, 1 lowercase, 1 special character, 1-digit character
                            </small>
                            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger errormessage" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Confirm Password</label>
                            @Html.PasswordFor(x => x.ConfirmPassword, new { id = "exampleInputPassword3", @class = "form-control", @placeholder = "Enter Your Confirm Password" })
                            @*<input type="password" class="form-control" id="exampleInputPassword3" placeholder="Enter Your Confirm Password">*@
                            <span toggle="#password-field" id="toggle-password3" class="toggle-password"><img src="/Content/Front/images/login/eye.png" alt="toggle-password"></span>
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger errormessage" })
                        </div>
                        <button type="submit" class="btn-general">submit</button>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery   -->
    <script src="~/Scripts/js/jquery.min.js"></script>

    <!-- Bootstrap Js -->
    <script src="~/Scripts/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom Js -->
    <script src="~/Scripts/js/script.js"></script>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
