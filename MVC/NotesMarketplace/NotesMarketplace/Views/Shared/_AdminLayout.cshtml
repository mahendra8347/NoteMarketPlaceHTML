    <script>
        function fileValidation() {
            var fileInput =
                document.getElementById('DefaultImageForNotes');

            var filePath = fileInput.value;

            // Allowing file type
            var allowedExtensions =
                /(\.jpg)$/i;

            if (!allowedExtensions.exec(filePath)) {
                fileInput.value = '';
                document.getElementById('DefaultImageForNotes-error').innerHTML = "Select .jpg file only";
                document.getElementById('DefaultImageForNotes').focus;
                return false;
            }
        }

        function fileImgValidation() {
            var fileInput =
                document.getElementById('DefaultProfilePicture');

            var filePath = fileInput.value;

            // Allowing file type
            var allowedExtensions =
                /(\.jpg)$/i;

            if (!allowedExtensions.exec(filePath)) {
                fileInput.value = '';
                document.getElementById('DefaultProfilePicture-error').innerHTML = "Select .jpg file only";
                document.getElementById('DefaultProfilePicture').focus;
                return false;
            }
        }

        function NoteFunction() {
            document.getElementById("AllSeachNote").submit();
        }
    </script>

