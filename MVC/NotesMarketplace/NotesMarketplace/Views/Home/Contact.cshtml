@model NotesMarketplace.Models.ContactUs

<!-- Top Image With Text -->
<div class="container-fluid p-0">
    <div class="image-with-text">
        <h3 class="text-center">Contact Us</h3>
    </div>
</div>

<div id="contact-form">

    <!-- Form Area -->
    <div id="user-profile-form" class="profile-form">

        @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { }))
        {

            <div class="container">

                <!-- Get in tuch -->
                <div id="basic-profile-details" class="detail-content-box">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <h3>Get In Touch</h3>
                            <p class="form-text">Let us know how to get back to you</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="form-group">
                                    <label>Full Name *</label>
                                    @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", @value = @Model.FullName, @readonly = "readonly" })
                                </div>
                                <div class="form-group">
                                    <label>Email Address *</label>
                                    @Html.TextBoxFor(x => x.EmailID, new { @class = "form-control", @value = @Model.EmailID, @readonly = "readonly" })
                                </div>
                            }
                            else
                            {
                                <div class="form-group">
                                    <label>Full Name *</label>
                                    @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", @placeholder = "Enter Your FullName" })
                                    @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger errormessage" })
                                </div>
                                <div class="form-group">
                                    <label>Email Address *</label>
                                    @Html.TextBoxFor(x => x.EmailID, new { @class = "form-control", @placeholder = "Enter Your EmailID" })
                                    @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger errormessage" })
                                </div>
                            }
                            <div class="form-group">
                                <label>Subject *</label>
                                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @placeholder = "Enter Your Subject" })
                                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger errormessage" })
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <div class="form-group comment">
                                <label>Comments / Questions *</label>
                                @Html.TextAreaFor(x => x.Comments, new { @class = "form-control", rows = "8", @placeholder = "Comments2..." })
                                @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger errormessage error_field" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <button class="btn-general btn-submit-form mr-3">submit</button>
                        </div>
                    </div>

                </div>

            </div>

        }

    </div>

</div>